{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "rootDir": "./",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./build",
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
